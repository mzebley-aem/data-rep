{
  "name": "data-rep",
  "version": "1.0.0",
  "description": "This webcomponent follows the [open-wc](https://github.com/open-wc/open-wc) recommendation.",
  "main": "dist/bundle.js",
  "scripts": {
    "build:scss": "sass src/styles/index.scss src/styles/index.css",
    "build:css": "npm run build:scss && postcss src/styles/index.css -o src/styles/index.css && postcss src/styles/root-variables.css -o dist/root-variables.css",
    "build": "npm run build:css && rollup -c",
    "start": "npm run build && es-dev-server --app-index demo/index.html --node-resolve --watch --open --watch-exclude 'src/styles/index.css'"
  },
  "keywords": [
    "a11y",
    "webcomponent",
    "lit-element",
    "lit-html",
    "accessibility",
    "data",
    "chart",
    "table",
    "visualization",
    "data-rep"
  ],
  "author": "Mark Zebley",
  "license": "MIT",
  "dependencies": {
    "cssnano": "^6.0.1",
    "lit": "^3.1.0",
    "rollup-plugin-lit-css": "^4.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "autoprefixer": "^10.4.16",
    "es-dev-server": "^2.1.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-scss": "^4.0.9",
    "rollup": "^2.79.1",
    "sass": "^1.69.5",
    "typescript": "^5.3.2",
    "lit": "^3.1.0",
    "rollup-plugin-lit-css": "^4.0.1",
    "cssnano": "^6.0.1"
  }
}
