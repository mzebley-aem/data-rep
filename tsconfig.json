{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["ES6", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "public",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "declaration": true,
    "incremental": true
  },
  "include": ["**/*.ts", "src/templates/*.d.ts"],
}
